.buttons
  = link_to "New Post", new_blog_blog_post_path(@blog), :class => 'add'

- @posts = @blog.all_posts.properties_for_admin.paginate(:page => params[:p])

= table_for @posts, :id => "blog-posts" do |t, post|
  - t.resource post

  - t.column(:title)
  - t.column(:author) { post.author ? post.author.name : 'None' }
  - t.column(:published_at) { post.published? ? post.published_at.to_s(:short) : 'Draft' }

  - t.controls { |c| c.delete }

= will_paginate @posts

= plugin_stylesheet :blog, "blog-admin"
